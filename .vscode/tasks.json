{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test gcc matcher",
      "type": "shell",
      "command": "shellcheck -f gcc test/fixtures/*.sh",
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": [
          {
            "regexp": "^(.+):(\\d+):(\\d+):\\s(note|warning|error):\\s(.*)\\s\\[(SC\\d+)\\]$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5,
            "code": 6
          }
        ]
      }
    },
    {
      "label": "Test tty matcher",
      "type": "shell",
      "command": "shellcheck -f tty test/fixtures/*.sh",
      "problemMatcher": {
        "fileLocation": [
          "relative",
          "${workspaceFolder}"
        ],
        "pattern": [
          {
            "regexp": "^In\\s(.+)\\sline\\s(\\d+):$",
            "file": 1,
            "line": 2
          },
          {
            "regexp": ".*"
          },
          {
            "regexp": "SC(\\d+)\\s\\((note|warning|error)\\):\\s(.+)$",
            "code": 1,
            "severity": 2,
            "message": 3,
            "loop": true
          }
        ]
      }
    }
  ]
}